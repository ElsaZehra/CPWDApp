<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pay With Credit Card"
        android:onClick="AddCredit"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Pay With Debit Card"
        android:onClick="AddDebit"
        android:id="@+id/button11"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Remove Credit Card"
        android:onClick="RemoveCredit"
        android:id="@+id/button12"
        android:layout_below="@+id/button11"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="99dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Remove Debit Card"
        android:onClick="RemoveDebit"
        android:id="@+id/button13"
        android:layout_below="@+id/button12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/group"
        android:layout_below="@+id/button13"></LinearLayout>

</RelativeLayout>